@model IEnumerable<CrudApplication.Models.Product>
@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">+ Add Product</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price (Rs)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = p.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = p.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
